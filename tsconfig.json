{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"$layout": ["src/layout/index.ts", "src/layout"],
			"$layout/*": ["src/layout/*"],
			"$lib": ["src/lib/index.ts", "src/lib"],
			"$lib/*": ["src/lib/*"]
		}
	}
}
